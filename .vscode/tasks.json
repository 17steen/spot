{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "meson",
            "type": "shell",
            "command": "meson target -Dbuildtype=debug -Doffline=false --reconfigure --prefix=\"$HOME/.local\""
        },
        {
            "label": "build",
            "type": "shell",
            "command": "ninja install -C target",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "run",
            "type": "shell",
            "command": "$HOME/.local/bin/spot",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "test",
            "type": "shell",
            "command": "meson test -C target --verbose",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}